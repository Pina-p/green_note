<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6DFBB"
    tools:context=".view.AccountSettingActivity">
    <ImageView
        android:id="@+id/iv_back"
        android:src="@drawable/ic_back"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:tint="@color/black" />
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/bg_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:src="@drawable/flowerup"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:src="@drawable/flowerdown"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:id="@+id/iv_userprofile"
        android:layout_width="150dp"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_height="150dp"
        android:src="@drawable/femaleprofile"
        android:layout_marginTop="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:fontFamily="@font/manrope_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bg"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Name"
        android:fontFamily="@font/manrope_regular"
        android:enabled="true"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@drawable/editbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"/>

    <TextView
        android:id="@+id/tv_email"
        android:fontFamily="@font/manrope_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Email"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name"/>

    <EditText
        android:id="@+id/et_email"
        android:fontFamily="@font/manrope_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Email"
        android:enabled="true"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textEmailAddress"
        android:background="@drawable/editbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email"/>

    <TextView
        android:id="@+id/tv_pwd"
        android:fontFamily="@font/manrope_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"/>
    <EditText
        android:id="@+id/et_pwd"
        android:enabled="false"
        android:fontFamily="@font/manrope_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:background="@drawable/editbox"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tv_pwd"/>

    <TextView
        android:id="@+id/tv_changePwd"
        android:fontFamily="@font/manrope_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="Change Password"
        android:textColor="#616161"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pwd"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_saveChanges"
        app:cornerRadius="10dp"
        android:fontFamily="@font/manrope_regular"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/greenColor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:text="Save"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_changePwd"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        app:cornerRadius="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_regular"
        android:backgroundTint="@color/greenColor"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:text="Cancel"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/tv_changePwd"
        app:layout_constraintRight_toLeftOf="@id/btn_saveChanges"/>
</androidx.constraintlayout.widget.ConstraintLayout>